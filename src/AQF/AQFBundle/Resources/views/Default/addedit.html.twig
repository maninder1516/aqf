{% extends 'base.html.twig' %}

{% block body %}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>Missions</h1>   
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Missions</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">{{ actionLabel }}</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          {{ form_start(form) }}
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                {{ form_row(form.serviceDate, {'attr' : {'class':'form-control' } }) }}
              </div>
              <div class="form-group">
                {{ form_row(form.quantity, {'attr' : {'class':'form-control' } }) }}
              </div>
              <div class="form-group">
                
              </div>
              <div class="form-group">
                {{ form_row(form.vendorName, {'attr' : {'class':'form-control' } }) }}
              </div>
            </div>
            <!-- /.col -->
            <div class="col-md-6">
              <div class="form-group">
                {{ form_row(form.productName, {'attr' : {'class':'form-control' } }) }}
              </div>
              <div class="form-group">
                {{ form_row(form.destinationCountry, {'attr' : {'class':'form-control' } }) }}
              </div>
              <div class="form-group">
              {{ form_row(form.vendorEmail, {'attr' : {'class':'form-control' } }) }}
              </div>
              <div class="form-group box-footer">
                {# <input id="save" name="save" class="button-primary save" type="submit" value="Save" style="margin-left: 530px;" onclick="return ValidateAnnouncementDates(this);"  /> #}
                <a href="{{ path('aqf_homepage') }}"><button type="submit" class="btn btn-primary">Save</button></a>
                <a href="{{ path('aqf_homepage') }}"><button type="button" class="btn btn-info">Back to list</button></a>
              </div>
            </div>
            <!-- /.col -->
          </div>
          {{ form_end(form) }}
          <!-- /.row -->
        </div>
        <!-- /.box-body -->
     </div>
</section>
<!-- /.Main content -->

{% endblock %}
