{% extends 'base.html.twig' %}

{% block body %}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>Missions</h1>   
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Missions</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">{{ actionLabel }}</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <form action="{{ path('aqf_addedit', {'id': id}) }}" method="post" {{ form_enctype(form) }} > 
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                {{ form_row(form.serviceDate, {'attr' : {'class':'form-control',      'name':'service_date' } }) }}
              </div>
              <div class="form-group">
                {{ form_row(form.quantity, {'attr' : {'class':'form-control', 'name':'quantity' } }) }}
              </div>
              <div class="form-group">
                {{ form_row(form.vendorName, {'attr' : {'class':'form-control', 'name':'vendor_name' } }) }}
              </div>
            </div>
            <!-- /.col -->
            <div class="col-md-6">
              <div class="form-group">
                {{ form_row(form.productName, {'attr' : {'class':'form-control', 'name':'product_name' } }) }}
              </div>
              <div class="form-group">
                {{ form_row(form.destinationCountry, {'attr' : {'class':'form-control', 'name':'destination_ountry' } }) }}
              </div>
              <div class="form-group">
              {{ form_row(form.vendorEmail, {'attr' : {'class':'form-control', 'name':'vendor_email' } }) }}
              </div>
              <div class="form-group box-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="{{ path('aqf_homepage', {'searchText':'empty'}) }}"><button type="button" class="btn btn-info">Back to list</button></a>
              </div>
            </div>
            <!-- /.col -->
          </div>
          </form>
          <!-- /.row -->
        </div>
        <!-- /.box-body -->
     </div>
</section>
<!-- /.Main content -->

{% endblock %}
